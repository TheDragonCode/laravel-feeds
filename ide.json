{
    "$schema": "https://laravel-ide.com/schema/laravel-ide-v2.json",
    "codeGenerations": [
        {
            "id": "dragon-code.xml-feeds.main",
            "name": "Create XML Feed",
            "classSuffix": "Feed",
            "regex": ".+",
            "files": [
                {
                    "appNamespace": "Feeds",
                    "name": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}.php",
                    "template": {
                        "type": "stub",
                        "path": "/stubs/feed.stub",
                        "parameters": {
                            "DummyNamespace": "${INPUT_FQN|namespace}",
                            "DummyClass": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}",
                            "NamespacedDummyUserModel": "App\\Models\\User",
                            "DummyUser": "User"
                        }
                    }
                }
            ]
        },
        {
            "id": "dragon-code.xml-feeds.item",
            "name": "Create XML Feed Item",
            "classSuffix": "FeedItem",
            "regex": ".+",
            "files": [
                {
                    "appNamespace": "Feeds\\Items",
                    "name": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}.php",
                    "template": {
                        "type": "stub",
                        "path": "/stubs/feed_item.stub",
                        "parameters": {
                            "DummyNamespace": "${INPUT_FQN|namespace}",
                            "DummyClass": "${INPUT_CLASS|replace: ,_|className|upperCamelCase}",
                            "NamespacedDummyUserModel": "App\\Models\\User"
                        }
                    }
                }
            ]
        }
    ]
}
